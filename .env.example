# Application Environment
NODE_ENV=production
PORT=3000

# Database Configuration
# For Docker: use 'mysql' as DB_HOST
# For local development: use '127.0.0.1' or 'localhost'
DB_HOST=mysql
DB_PORT=3306
DB_USER=safaricom
DB_PASSWORD=safaricompassword
DB_NAME=nurcana_sdp
DB_ROOT_PASSWORD=rootpassword

# Prisma Database URL (automatically constructed)
DATABASE_URL=mysql://safaricom:safaricompassword@mysql:3306/nurcana_sdp

# Safaricom API Configuration
SMS_API_USERNAME=your_safaricom_username
SMS_API_PASSWORD=your_safaricom_password
CPID=your_cpid
DEFAULT_OFFER_CODE=your_offer_code
CHARGE_AMOUNT=10

# Processing Configuration
DEFAULT_BATCH_SIZE=75
DEFAULT_INTERVAL_HOURS=4
CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=10000
TOKEN_REFRESH_INTERVAL=1500000

# Security
SESSION_SECRET=your-secure-session-secret-change-this-in-production

# Puppeteer Configuration (for Docker)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
